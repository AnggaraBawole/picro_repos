<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="30dp">

        <ImageView
            android:layout_width="70dp"
            android:layout_height="60dp"
            android:src="@drawable/mikro_hd"
            android:layout_marginLeft="20dp"/>

        <TextView
            android:fontFamily="@font/productsansbold"
            android:textColor="@color/colorPrimary"
            android:layout_width="wrap_content"
            android:textSize="17sp"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="10dp"
            android:layout_height="wrap_content"
            android:text="Bantuan Top Up "/>

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Cara Melakukan Top Up dengan Picro"
        android:fontFamily="@font/productsansbold"
        android:textColor="#000"
        android:textSize="16sp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="15dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="40dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TANPA BIAYA ADMIN   |   MINIMUM ISI Rp. 10,000"
            android:textSize="11sp"
            android:fontFamily="@font/productsansbold"/>

    </LinearLayout>

    <!-- top up help point 1 -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="@dimen/margin_between_help_topup">

        <ImageView
            android:layout_width="4dp"
            android:layout_height="@dimen/line_help_topup"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="16dp"
            android:background="@drawable/rounded_menu_green"/>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/left"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:background="@drawable/circle_menu_green">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1"
                android:fontFamily="@font/productsansbold"
                android:textColor="#FFF"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:text="Masukan jumlah nominal top up di halaman \ntop up dan tekan tombol lanjutkan"
            app:layout_constraintLeft_toRightOf="@id/left"
            app:layout_constraintTop_toTopOf="parent"
            android:textSize="12sp"
            android:layout_marginTop="2dp"
            android:fontFamily="@font/productsansbold"
            android:textColor="#000"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- top up help point 2 -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="@dimen/margin_between_help_topup">

        <ImageView
            android:layout_width="4dp"
            android:layout_height="@dimen/line_help_topup"
            android:layout_marginLeft="16dp"
            android:background="@drawable/rounded_menu_green"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"/>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/left_1"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:background="@drawable/circle_menu_green">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2"
                android:fontFamily="@font/productsansbold"
                android:textColor="#FFF"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:text="Scan QR Code yang digunakan untuk\npembayaran di Mikrolet"
            app:layout_constraintLeft_toRightOf="@id/left_1"
            app:layout_constraintTop_toTopOf="parent"
            android:textSize="12sp"
            android:layout_marginTop="2dp"
            android:fontFamily="@font/productsansbold"
            android:textColor="#000"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- top up help point 3 -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="@dimen/margin_between_help_topup">

        <ImageView
            android:layout_width="4dp"
            android:layout_height="@dimen/line_help_topup"
            android:layout_marginLeft="16dp"
            android:background="@drawable/rounded_menu_green"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"/>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/left_2"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:background="@drawable/circle_menu_green">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3"
                android:fontFamily="@font/productsansbold"
                android:textColor="#FFF"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:text="Sampaikan dan berikan uang yang sejumlah\nnominal topup kepada pengemudi mikrolet"
            app:layout_constraintLeft_toRightOf="@id/left_2"
            app:layout_constraintTop_toTopOf="parent"
            android:textSize="12sp"
            android:layout_marginTop="2dp"
            android:fontFamily="@font/productsansbold"
            android:textColor="#000"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- top up help point 4 -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="@dimen/margin_between_help_topup">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/left_3"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:background="@drawable/circle_menu_green">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4"
                android:fontFamily="@font/productsansbold"
                android:textColor="#FFF"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:text="Pastikan saldo topup anda bertambah"
            app:layout_constraintLeft_toRightOf="@id/left_3"
            app:layout_constraintTop_toTopOf="parent"
            android:textSize="12sp"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/productsansbold"
            android:textColor="#000"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <Button
        android:id="@+id/back"
        android:layout_width="100dp"
        android:layout_height="45dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="40dp"
        android:text="KEMBALI"
        android:textSize="12sp"
        android:textColor="#FFF"
        android:fontFamily="@font/productsansbold"
        android:background="@color/colorPrimary"/>

</LinearLayout>