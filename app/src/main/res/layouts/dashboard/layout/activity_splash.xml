<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!-- PICRO LOGO -->
    <ImageView
        android:layout_width="90dp"
        android:layout_height="51dp"
        android:layout_marginTop="35dp"
        android:src="@drawable/logo"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- IMAGE -->
    <ImageView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="35dp"
        android:background="@drawable/splash_hd_pic"
        app:layout_constraintWidth_percent="0.9"
        app:layout_constraintHeight_percent="0.3"
        app:layout_constraintBottom_toTopOf="@id/textGroup"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <!-- TEXT LAYOUT -->
    <LinearLayout
        android:id="@+id/textGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="25dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@id/buttonGroup"
        app:layout_constraintLeft_toLeftOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/productsansbold"
            android:text="Selamat datang di Picro!"
            android:textColor="#000"
            android:textSize="24dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/productsans"
            android:textColor="#0f0f0f"
            android:text="Naik mikrolet tanpa repot, bayar tanpa uang cash" />

    </LinearLayout>

    <!-- button -->
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/buttonGroup"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:textColor="#FFF"
        android:background="@color/colorPrimary"
        android:layout_marginBottom="10dp"
        android:text="SCAN KODE QR ANDA"
        android:fontFamily="@font/productsansbold"
        android:textSize="13sp"
        app:layout_constraintBottom_toTopOf="@id/aggrement"/>

    <TextView
        android:id="@+id/aggrement"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:fontFamily="@font/productsans"
        app:layout_constraintBottom_toBottomOf="parent"
        android:lineSpacingExtra="3sp"
        android:textSize="12.4sp"
        android:layout_marginBottom="20dp"
        android:text="Dengan masuk atau mendaftar, anda telah menggunakan aplikasi yang dibuat oleh kelompok 3 | Picro"/>

</androidx.constraintlayout.widget.ConstraintLayout>